<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0180AE">

        <ImageButton
            android:id="@+id/btnAprobar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/rounder_button"
            android:padding="20dp"
            android:scaleType="fitEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kyc" />

        <ImageButton
            android:id="@+id/btnSolicitante"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="36dp"
            android:background="@drawable/rounder_button_blue"
            android:padding="20dp"
            android:scaleType="fitEnd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/enviar_datos" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="18dp"
            android:text="Aprobante"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAprobar" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="36dp"
            android:text="Solicitante"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSolicitante" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="¿Cómo deseas trabajar hoy?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>